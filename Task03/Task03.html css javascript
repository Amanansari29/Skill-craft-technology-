<script>
const quizData=[
{question:"Which symbol is used for comments in JavaScript?",
options:["//","##","**","%%"],answer:"//"},
{question:"Which keyword declares a variable?",
options:["var","int","float","char"],answer:"var"},
{question:"Which loop runs at least once?",
options:["for","while","do...while","loop"],answer:"do...while"}
];

let currentQuestion=0;
let score=0;
let timeLeft=60;
let timer;

/* Voice */
function speak(text){
if('speechSynthesis' in window){
let msg=new SpeechSynthesisUtterance(text);
window.speechSynthesis.speak(msg);
}
}

function startGame(){
document.getElementById("instructions").style.display="none";
document.getElementById("quizBox").style.display="block";
speak("Welcome to the coding quiz");
loadQuestion();
startTimer();
}

function loadQuestion(){
document.body.className="";
let q=quizData[currentQuestion];
document.getElementById("question").innerText=q.question;
let optionsHTML="";
q.options.forEach(opt=>{
optionsHTML+=`<label class="option">
<input type="radio" name="answer" value="${opt}"> ${opt}
</label>`;
});
document.getElementById("options").innerHTML=optionsHTML;
speak(q.question);
}

function startTimer(){
clearInterval(timer);
timeLeft=60;
document.getElementById("timer").innerText=timeLeft;
timer=setInterval(()=>{
timeLeft--;
document.getElementById("timer").innerText=timeLeft;
if(timeLeft==10){speak("10 seconds left");}
if(timeLeft<=0){
clearInterval(timer);
nextQuestion();
}
},1000);
}

function nextQuestion(){
clearInterval(timer);
let selected=document.querySelector('input[name="answer"]:checked');

if(selected && selected.value===quizData[currentQuestion].answer){
score++;
document.body.className="correct";
document.getElementById("character").classList.add("dance");
speak("Correct answer congratulations");
setTimeout(()=>{document.getElementById("character").classList.remove("dance");},1500);
}else{
document.body.className="wrong";
speak("Wrong answer boom");
}

currentQuestion++;

if(currentQuestion==2){
document.getElementById("prank").style.display="flex";
speak("System error");
setTimeout(()=>{
document.getElementById("prank").style.display="none";
},3000);
}

if(currentQuestion<quizData.length){
setTimeout(()=>{
loadQuestion();
startTimer();
},2000);
}else{
showResult();
}
}

function showResult(){
document.getElementById("question").innerHTML="Quiz Completed ğŸ‰";
document.getElementById("options").innerHTML="";
document.getElementById("result").innerHTML="Score: "+score+" / "+quizData.length;
speak("Quiz completed. Your score is "+score);
}
</script>

